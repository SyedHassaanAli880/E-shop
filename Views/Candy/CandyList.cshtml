@model IEnumerable<Candy>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-12" style="text-align:center; font-style:italic;color:#009879;">
            <h2>CANDIES</h2>
        </div>
            <a asp-controller="Item" asp-action="Create" class="col-2">Create new item</a>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table" style="width:100%; border-radius:5px 5px 0 0; overflow:hidden; box-shadow:0 0 20px rgba(0,0,0,0.15);" id="1">
            <thead>
                <tr style="color:white; background-color: #009879">
                    <th width="20%" style="text-align:center;font-style:italic">Name</th>
                    <th width="30%" style="text-align:center;font-style:italic">Price</th>
                    <th width="30%" style="text-align:center;font-style:italic">Is On Sale</th>
                    <th width="30%" style="text-align:center;font-style:italic">Is In Stock</th>
                    <th width="30%" style="text-align:center;font-style:italic">Description</th>
                    <th width="30%" style="text-align:center;font-style:italic">Category</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var it in Model)
                {
                <tr>
                    <td width="20%" style="text-align:center">@it.Name</td>
                    <td width="20%" style="text-align:center">@it.Price</td>
                    <td width="30%" style="text-align:center">@it.IsOnSale</td>
                    <td width="20%" style="text-align:center">@it.IsInStock</td>
                    <td width="20%" style="text-align:center">@it.Description</td>
                    <td width="30%" style="text-align:center">@it.Category.CategoryName</td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>

